<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apifinal.MainActivity"
    android:background="#ffffff"
    >



    <Button
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes!"
        android:layout_below="@id/textView"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:id="@+id/yesButton"
        android:textSize="40dp"
        android:padding="35dp"
        android:background="#000000"
        android:fontFamily="@font/sans"/>

    <Button
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No!"
        android:layout_centerInParent="true"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@id/yesButton"
        android:id="@+id/noButton"
        android:layout_marginRight="40dp"
        android:textSize="40dp"
        android:padding="35dp"
        android:background="#000000"
        android:fontFamily="@font/sans"/>

    <Button
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Joke"
        android:layout_below="@id/jokeView"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:id="@+id/refreshButton"
        android:textSize="40dp"
        android:padding="35dp"
        android:background="#000000"
        android:fontFamily="@font/sans"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Wanna hear a joke?"
        android:textColor="#F6F8F5"
        android:textSize="34dp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/jokeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1000dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-black"
        android:text=""
        android:drawableBottom="@drawable/sans"
        android:textColor="#000000"
        android:textSize="34dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/papyrus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1000dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-black"
        android:text="THEN WHY ARE YOU HERE PEASANT!"
        android:drawableBottom="@drawable/papyrus"
        android:textColor="#000000"
        android:textSize="34dp"
        android:textStyle="bold"
        />

</LinearLayout>